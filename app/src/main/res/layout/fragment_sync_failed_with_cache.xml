<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="5dp"
    android:background="@drawable/background_card_sync"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".view.datasync.SyncFailedNoCacheFragment">

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/failed_to_sync_data"
        android:textColor="@color/gray_500"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/errorText"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_400"
        android:textSize="16sp"
        android:text="@string/error_cant_get_data_remote_with_cache" />

    <TextView
        android:id="@+id/cacheSyncDateView"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_400"
        android:textSize="16sp"
        tools:text="Last sync: 18.02.2020 22:00" />

    <TextView
        style="@style/PrimaryButton"
        android:id="@+id/retryBtn"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/retry"/>

    <TextView
        style="@style/PrimaryButton"
        android:id="@+id/loadCacheBtn"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/load_from_cache"/>

</LinearLayout>