<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    tools:context=".view.contributions_grid.ContributionDayDialogFragment">

    <TextView
        android:id="@+id/contributionsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20 contributions"
        android:textColor="@color/gray_500"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contributionDate"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/gray_500"
        android:text="21 Feb 2014"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contributionsCount"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/contributionMark"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/background_contribution_mark"
        app:layout_constraintBottom_toBottomOf="@+id/contributionDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/contributionsCount" />

</androidx.constraintlayout.widget.ConstraintLayout>