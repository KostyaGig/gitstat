<?xml version="1.0" encoding="utf-8"?>
<com.alexandr7035.gitstat.core.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:gravity="center_vertical"
    android:background="@drawable/background_language_tag">

    <View
        android:id="@+id/languageTagColor"
        android:layout_width="12sp"
        android:layout_height="12sp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/background_circle"/>

    <TextView
        android:id="@+id/languageNameView"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Kotlin">
    </TextView>

</com.alexandr7035.gitstat.core.CheckableLinearLayout>